@model HungerStation.Web.Models.Dto.OrderHeaderDto

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-success bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">Order Confirmation</h1>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 text-center">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        <h2 class="text-success mt-3">Thank You for Your Order!</h2>
                        <p class="lead">Your order has been successfully placed and is being processed.</p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12 col-lg-6 offset-lg-3">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Order ID:</strong>
                                    </div>
                                    <div class="col-6">
                                        @Model.OrderHeaderId
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Email:</strong>
                                    </div>
                                    <div class="col-6">
                                        @Model.Email
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Name:</strong>
                                    </div>
                                    <div class="col-6">
                                        @Model.Name
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Phone:</strong>
                                    </div>
                                    <div class="col-6">
                                        @Model.Phone
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Order Time:</strong>
                                    </div>
                                    <div class="col-6">
                                        @Model.OrderTime.ToString("MMM dd, yyyy hh:mm tt")
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Status:</strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="badge bg-warning">@Model.Status</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Total:</strong>
                                    </div>
                                    <div class="col-6">
                                        <strong>@Model.OrderTotal.ToString("C")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12 col-lg-6 offset-lg-3">
                        <h5>Order Items</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>@detail.Product.Name</td>
                                            <td>@detail.Count</td>
                                            <td>@detail.Product.Price.ToString("C")</td>
                                            <td>@((detail.Count * detail.Product.Price).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <div class="alert alert-info">
                            <strong>What's Next?</strong><br>
                            You will receive an email confirmation shortly. We'll notify you when your order is ready for pickup.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary form-control btn-lg" style="height:50px;">
                        Continue Shopping
                    </a>
                </div>
                <div class="col-12 col-md-6">
                    <a asp-action="OrderIndex" class="btn btn-success form-control btn-lg" style="height:50px;">
                        View All Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
